{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-12">

            {% if error %}
                <p>{{ error.messageKey }}</p>
            {% endif %}

            <form action="{{ path('login') }}" method="POST">
                <input type="text" name="_username" value="{{ lastUsername }}" placeholder="{{ 'security.login.username_placeholder'|trans }}">
                <input type="password" name="_password" placeholder="{{ 'security.login.password_placeholder'|trans }}">
                <input type="submit" value="{{ 'security.login.login'|trans }}">
            </form>

        </div>
    </div>

{% endblock %}